# Workaround für VNC-Server auf Linux Mint
if [ $(echo "$OPERATION_SYSTEM" | grep -i -c -E " mint ") -gt 0 ];
then
  POST_INST_CONF[realvnc-vnc-server]="apt install xterm -y"
fi
POST_INST_CONF[rocksndiamonds]="dpkg-reconfigure rocksndiamonds"
