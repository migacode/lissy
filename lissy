then
  KATEGORIE_PKGS[v]+=" lightdm-settings"
  if [ -s "$LDM_CONF_DIR/lightdm-gtk-greeter.conf" ];
  then
    KATEGORIE_PKGS[v]+=" lightdm-gtk-greeter-settings"
  fi
fi
