if [ $CHK_VERSION -eq 1 ]; then ONEDRIVE_GUI_VER="1.0.3"; fi # Bis OneDrive 2.4.x
if [ $CHK_VERSION -eq 0 ]; then ONEDRIVE_GUI_VER="1.1.1"; fi # Ab OneDrive 2.5.0
if [ $CHK_VERSION -eq 1 ] ||
   [ $CHK_VERSION -eq 0 ];
then
