PHP_VERSION=$(LANG=en apt show "php" 2>/dev/null | grep -i -E "depends\:\s*")
PHP_VERSION=$(echo -n "${PHP_VERSION##* }" | xargs)
KATEGORIE_PKGS[a]="apache2 php libapache2-mod-php"
